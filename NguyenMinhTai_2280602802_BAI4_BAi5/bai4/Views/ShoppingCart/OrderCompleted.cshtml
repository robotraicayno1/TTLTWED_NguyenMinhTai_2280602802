@model int

@{
    ViewData["Title"] = "Đặt Hàng Thành Công";
}

<style>
    body {
        background: linear-gradient(135deg, #2c3e50, #34495e);
        color: white;
    }

    .success-card {
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0px 8px 32px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 40px;
        text-align: center;
    }

    .btn-outline-primary {
        background-color: #f39c12;
        border: none;
        color: black;
    }

        .btn-outline-primary:hover {
            background-color: #e67e22;
        }
</style>

<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100">
    <div class="success-card">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        <h2 class="mt-3 text-success fw-bold">Đặt hàng thành công! 🎉</h2>
        <p class="lead mt-2">Cảm ơn bạn đã mua hàng! Mã đơn hàng của bạn là:</p>
        <h4 class="fw-bold text-primary">#@Model</h4>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-house-door"></i> Về trang chủ
            </a>
        </div>
    </div>
</div>