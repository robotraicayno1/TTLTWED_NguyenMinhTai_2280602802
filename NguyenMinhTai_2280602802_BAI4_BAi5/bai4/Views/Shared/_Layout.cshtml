<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nguyen Minh Tai - 2280602802</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bai4.styles.css" asp-append-version="true" />
    <style>
        /* Navbar đẹp với shadow và nền tối */
        .navbar {
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #2c3e50; /* Màu xám đậm cho navbar */
        }

            .navbar .navbar-brand {
                color: #ecf0f1;
                font-weight: bold;
            }

            .navbar .navbar-nav .nav-link {
                color: #ecf0f1;
                transition: 0.3s;
            }

                .navbar .navbar-nav .nav-link:hover {
                    color: #f39c12; /* Màu vàng khi hover */
                }

        /* Nút Cart đẹp mắt và cách biệt với Login */
        .cart-btn {
            background-color: #f39c12; /* Màu vàng gold */
            color: white;
            padding: 12px 22px;
            border-radius: 8px;
            font-size: 18px;
            display: flex;
            align-items: center;
            transition: 0.3s ease-in-out;
            text-decoration: none !important;
            margin-left: 20px; /* Khoảng cách giữa nút Cart và các nút khác */
        }

            .cart-btn i {
                font-size: 22px;
                margin-right: 8px;
                color: white;
            }

            .cart-btn:hover {
                background-color: #e67e22; /* Màu sáng hơn khi hover */
                transform: scale(1.05); /* Phóng to nhẹ khi hover */
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Thêm shadow khi hover */
            }

        /* Footer với bố cục rõ ràng */
        footer {
            background-color: #2c3e50;
            color: white;
            padding: 30px 0;
        }

            footer .text-uppercase {
                font-weight: bold;
                color: #f39c12;
            }

            footer a {
                color: #ecf0f1;
                text-decoration: none;
            }

                footer a:hover {
                    color: #f39c12;
                }

            footer .container {
                display: flex;
                justify-content: space-between;
                flex-wrap: wrap;
            }

            footer .col-lg-3 {
                margin-bottom: 20px;
            }

            footer .text-center {
                background-color: #34495e;
                padding: 15px;
            }

            footer .container {
                flex-direction: column;
                align-items: center;
            }

            footer .col-lg-3 {
                text-align: center;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Nguyen Minh Tai - 2280602802
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">🏠 Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">🔒 Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                        <li class="nav-item">
                            <a href="https://localhost:7156/ShoppingCart" class="cart-btn">
                                <i class="bi bi-cart"></i> Cart
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5 pt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="col-lg-6">
                <h5 class="text-uppercase">Nguyen Minh Tai - 2280602802</h5>
                <p>This is a sample e-commerce website created for educational purposes.</p>
            </div>
            <div class="col-lg-3">
                <h5 class="text-uppercase">Links</h5>
                <ul class="list-unstyled">
                    <li><a href="https://github.com" target="_blank"><i class="bi bi-github"></i> GitHub</a></li>
                    <li><a href="https://www.linkedin.com" target="_blank"><i class="bi bi-linkedin"></i> LinkedIn</a></li>
                </ul>
            </div>
            <div class="col-lg-3">
                <h5 class="text-uppercase">Contact</h5>
                <ul class="list-unstyled">
                    <li><a href="mailto:example@example.com"><i class="bi bi-envelope"></i> Email</a></li>
                    <li><a href="tel:+1234567890"><i class="bi bi-telephone"></i> Phone</a></li>
                </ul>
            </div>
        </div>
        <div class="text-center">
            &copy; 2025 - NGUYENMINHTAI2280602802 - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
