@model bai4.Models.Product

<h2 class="mb-4 text-center text-light">🗑️ Delete Product</h2>

<div class="card shadow-lg p-5" style="background: rgba(0, 0, 0, 0.6); backdrop-filter: blur(10px); border-radius: 15px; border: 2px solid #e74c3c;">
    <div class="card-body text-center">
        <h4 class="text-warning fw-bold">⚠️ Are you sure you want to delete this product?</h4>
        <p class="lead fw-bold text-light">@Model.Name</p>
        <p class="text-muted">$@Model.Price.ToString("N2")</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail mb-3" style="max-width: 200px; border-radius: 10px;" />
        }

        <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirmDelete()">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger w-50 shadow-lg hover-zoom">
                    🗑️ Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-3 w-50 shadow-lg hover-zoom">❌ Cancel</a>
            </div>
        </form>
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this product?");
    }
</script>

<style>
    body {
        background: linear-gradient(135deg, #2c3e50, #34495e); /* Gradient tối sang trọng */
        font-family: 'Poppins', sans-serif;
        color: #ecf0f1;
        margin: 0;
        padding: 0;
    }

    h2 {
        font-size: 2.5em;
        font-weight: bold;
        color: #ecf0f1;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
    }

    .card {
        background: rgba(0, 0, 0, 0.6); /* Nền card tối */
        backdrop-filter: blur(10px); /* Mờ nền */
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        border: 2px solid #e74c3c;
    }

        .card:hover {
            transform: scale(1.05); /* Phóng to khi hover */
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
        }

    .btn-danger {
        background: linear-gradient(135deg, #e74c3c, #c0392b); /* Gradient đỏ */
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1.1em;
        transition: 0.3s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #c0392b, #e74c3c); /* Đảo ngược gradient khi hover */
            transform: scale(1.05);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #7f8c8d, #95a5a6); /* Gradient xám */
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1.1em;
        transition: 0.3s ease;
    }

        .btn-secondary:hover {
            background: linear-gradient(135deg, #95a5a6, #7f8c8d); /* Đảo ngược gradient khi hover */
            transform: scale(1.05);
        }

    .img-thumbnail {
        border-radius: 10px;
        max-width: 100%;
        max-height: 200px;
        object-fit: cover;
    }

    .hover-zoom {
        transition: transform 0.3s ease;
    }

        .hover-zoom:hover {
            transform: scale(1.05); /* Phóng to khi hover */
        }

    .text-light {
        color: #ecf0f1 !important;
    }

    .text-warning {
        color: #f39c12 !important;
    }
</style>
